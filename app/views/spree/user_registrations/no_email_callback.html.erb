<div class="container">
  <div class="row">
    <%= form_tag('/users/enter-email', method: "post") do %>
    <%= label_tag(:email, "Enter your email") %>
    <%= text_field_tag(:email) %>
    <%= text_field_tag(:provider, "",  value: @auth_hash['provider'], style: "display: none;")%>
    <%= text_field_tag(:uid, "", value: @auth_hash['uid'], style: "display: none;")%>
    <%= submit_tag("CONTINUE") %>
    <% end %>
  </div>
</div>
